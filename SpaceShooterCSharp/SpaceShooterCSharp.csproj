<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net6.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
    <ApplicationIcon>player.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="images\enemy.png" />
    <None Remove="images\player.png" />
    <None Remove="sounds\backgroundmusic.wav" />
    <None Remove="sounds\enemykilled.wav" />
    <None Remove="sounds\enemyshot.wav" />
    <None Remove="sounds\playerdamaged.wav" />
    <None Remove="sounds\playershot.wav" />
    <None Remove="sounds\startgame.wav" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="player.ico" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="sounds\backgroundmusic.wav">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="sounds\enemykilled.wav">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="sounds\enemyshot.wav">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="sounds\playerdamaged.wav">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="sounds\playershot.wav">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="sounds\startgame.wav">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <Resource Include="images\enemy.png" />
    <Resource Include="images\player.png" />
  </ItemGroup>

</Project>
